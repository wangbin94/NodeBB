{
	"id": "nodebb-plugin-parse-push",
	"name": "Quickstart Plugin for NodeBB",
	"description": "A starter kit for quickly creating NodeBB plugins",
	"url": "https://github.com/NodeBB/nodebb-plugin-quickstart",
	"library": "./index.js",
	"hooks": [
        { "hook": "filter:admin.header.build", "method": "admin.menu"},
        { "hook": "action:app.load", "method": "init" },
        { "hook": "action:notification.pushed", "method": "notification.pushed" },
        { "hook": "action:post.save", "method": "postSaved"}
	],
    "templates": "templates",
	"staticDirs": {
		"static": "./static"
	},
	"less": [
		"static/style.less"
	],
	"scripts": [
		"static/lib/main.js"
	]
}